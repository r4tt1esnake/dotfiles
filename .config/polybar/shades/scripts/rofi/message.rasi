/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @al;
    text-color:             @fg;
	font:				 	"Consolas 9";
}

window {
    width:      			320px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @bg1;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@fg;
}
